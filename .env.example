# Node Environment
NODE_ENV=development

# Database - PostgreSQL
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_USER=quiz_user
DB_PASSWORD=quiz_password
DB_NAME=quiz_db
DB_SYNCHRONIZE=false
DB_LOGGING=false

# Database - MongoDB
MONGO_URI=mongodb://mongo_user:mongo_password@localhost:27017/quiz_db?authSource=admin
MONGO_USER=mongo_user
MONGO_PASSWORD=mongo_password
MONGO_DB=quiz_db

# Kafka
KAFKA_BROKERS=kafka:9092
KAFKA_CLIENT_ID=quiz-system
KAFKA_GROUP_ID=quiz-system-group

# JWT
JWT_SECRET=your_jwt_secret_key_change_in_production
JWT_EXPIRATION=24h
JWT_REFRESH_SECRET=your_refresh_secret_key_change_in_production
JWT_REFRESH_EXPIRATION=7d

# API Gateway
GATEWAY_PORT=3000
GATEWAY_LOG_LEVEL=debug

# User Service
USER_SERVICE_PORT=3001
USER_SERVICE_URL=http://localhost:3001

# Question Service
QUESTION_SERVICE_PORT=3002
QUESTION_SERVICE_URL=http://localhost:3002

# Exam Service
EXAM_SERVICE_PORT=3003
EXAM_SERVICE_URL=http://localhost:3003

# Quiz Service
QUIZ_SERVICE_PORT=3004
QUIZ_SERVICE_URL=http://localhost:3004

# Scoring Service
SCORING_SERVICE_PORT=3005
SCORING_SERVICE_URL=http://localhost:3005

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Email (Optional)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your_email@gmail.com
MAIL_PASSWORD=your_email_password
MAIL_FROM=Quiz System <noreply@quizsystem.com>

# Frontend
VITE_API_URL=http://localhost:3000
VITE_APP_NAME=Quiz System

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# CORS
CORS_ORIGIN=http://localhost:5173,http://localhost:5174

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
